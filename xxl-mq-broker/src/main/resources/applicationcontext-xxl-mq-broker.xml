<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- message operate service -->
	<bean id="xxlMqService" class="com.xxl.mq.broker.service.impl.XxlMqServiceImpl" />

	<!-- broker server -->
	<bean class="com.xxl.mq.client.broker.XxlMqBroker" init-method="init" destroy-method="destroy" >
		<property name="port" value="6080" />
		<property name="xxlMqService" ref="xxlMqService" />
	</bean>

</beans>